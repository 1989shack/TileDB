_realname=tiledb
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=2.9000
pkgrel=1
pkgdesc="Storage management library for sparse and dense array data (mingw-w64)"
arch=("any")
url="https://tiledb.com/"
license=("MIT")
depends=("${MINGW_PACKAGE_PREFIX}-lz4"
         "${MINGW_PACKAGE_PREFIX}-aws-sdk-cpp"
         "${MINGW_PACKAGE_PREFIX}-bzip2"
         "${MINGW_PACKAGE_PREFIX}-zlib"
         "${MINGW_PACKAGE_PREFIX}-zstd"
         "${MINGW_PACKAGE_PREFIX}-file"
         "${MINGW_PACKAGE_PREFIX}-libtre-git"
         )
#         "${MINGW_PACKAGE_PREFIX}-libtre-devel-git"
#         "${MINGW_PACKAGE_PREFIX}-libtre-dev-git"
#         "${MINGW_PACKAGE_PREFIX}-libsystre"
#         "libintl"
#could not resolve all dependencies, hmm...
#         "${MINGW_PACKAGE_PREFIX}-libintl"

makedepends=("${MINGW_PACKAGE_PREFIX}-cmake"
             "${MINGW_PACKAGE_PREFIX}-gcc"
             "${MINGW_PACKAGE_PREFIX}-curl")
options=("staticlibs" "strip")
source_dir="$TILEDB_HOME"

build() {
  ${MINGW_PREFIX}/bin/cmake.exe --version

  [[ -d ${source_dir}/build-${MINGW_CHOST} ]] && rm -rf ${source_dir}/build-${MINGW_CHOST}
  mkdir -p ${source_dir}/build-${MINGW_CHOST} && cd ${source_dir}/build-${MINGW_CHOST}

  if [ "$CARCH" == "i686" ]; then
  export CFLAGS="-mfpmath=sse -msse2"
  export CXXFLAGS="-mfpmath=sse -msse2"
  fi

  echo 'find *regex*'
  if [[ $(find / -name '*regex*') ]] ; then
    find / -name '*regex*' || true
    echo 'found *regex*'
  else
    echo 'unable to find *regex*'
  fi
  
  echo 'find *libtre*'
  if [[ $(find / -name '*libtre*') ]] ; then
    find / -name '*libtre*' || true
    echo 'found *libtre*'
  else
    echo 'unable to find *libtre*'
  fi
  
  export MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX="
  ${MINGW_PREFIX}/bin/cmake.exe \
    --trace \
    -G"MSYS Makefiles" \
    -DCMAKE_INSTALL_PREFIX=${MINGW_PREFIX} \
    -DBUILD_SHARED_LIBS=OFF \
    -DCMAKE_BUILD_TYPE=Release \
    -DTILEDB_STATIC=ON \
    -DTILEDB_S3=ON \
    -DCOMPILER_SUPPORTS_AVX2=OFF \
    ..
  make VERBOSE=1
  make VERBOSE=1 -C tiledb
}

package() {
  cd ${source_dir}/build-${MINGW_CHOST}
  make DESTDIR="${pkgdir}" -C tiledb install
}

check (){
  cd ${source_dir}/build-${MINGW_CHOST}
  #make check
}
